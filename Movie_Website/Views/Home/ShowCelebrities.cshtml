@model List<CastModel>

<section class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-area-content">
                    <h1>Celebrities page</h1>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card">
                    <img src="@(PathTools.CastImageThumb+item.ImageName)" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@Html.Raw(item.Bio.Substring(0, 10))</p>
                        <a asp-controller="Home" asp-action="DetailCelebrities" 
                        asp-route-id="@item.CastId" class="theme-btn theme-btn2">Over View @item.Name 's life</a>
                    </div>
                    <div class="card-footer">
                        <small class="text-body-secondary">Age: @item.Age</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
