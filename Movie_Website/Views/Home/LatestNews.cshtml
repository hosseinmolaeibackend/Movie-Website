@model List<NewsModel>

@{
    ViewData["Title"] = "LatestNews";
}

<section class="breadcrumb-area">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="breadcrumb-area-content">
					<h1>Blog Page</h1>
				</div>
			</div>
		</div>
	</div>
</section>

<section class="blog-area">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title pb-20">
					<h1><i class="icofont icofont-coffee-cup"></i> Latest News</h1>
				</div>
			</div>
		</div>
		<hr>
		<div class="row">
			<div class="col-lg-12">

				@foreach(var item in Model)
				{
					<div class="single-news">
						<div class="news-bg-1" style="background: url(@(PathTools.NewsImage+item.ImageNews)) !important;"></div>
						<div class="news-date">
							<h2><span>@DateTimeConvert.MonthToString(item.CreateTime)</span> @item.CreateTime.Day</h2>
							<h1>@item.CreateTime.Year</h1>
						</div>
						<div class="news-content">
							<h2>@item.Title</h2>
							<p>Witch Queen is a tall woman with a slim build. She has pink hair, which is pulled up under her hat, and teal eyes.</p>
						</div>
						<a asp-controller="Home" asp-action="DetailsNews" asp-route-id="@item.Id">Read More</a>
					</div>
				}
			</div>
		</div>
	</div>
</section>