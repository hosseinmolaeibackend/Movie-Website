@model NewsModel

<h2>@Model.Title</h2>

<img src="@(PathTools.NewsImage+Model.ImageNews)" alt="@Model.ImageNews" width="600px" height="300px" />
<br />
<p>
    @Html.Raw(Model.Description)
</p>
<br />

<p>
    @Model.CreateTime.ToString("t")
</p>

<a asp-area="Admin" asp-controller="News" asp-action="EditNews" asp-route-id="@Model.Id" class="btn btn-outline-warning">
    Edit
</a>